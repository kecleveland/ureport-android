<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">#287ca0</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:windowBackground">@color/white_window_background</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionMenuTextColor">@color/primary_color</item>
        <item name="android:actionMenuTextColor">@color/primary_color</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="paddingStart">20dp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextAppearance</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.FormMargin">
        <item name="android:layout_width">@dimen/credential_item_width</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AppTheme.Info">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextInputHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CardItemPadding">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.CustomButton">
        <item name="android:layout_width">@dimen/login_item_width</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppTheme.SpinnerFullItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SpinnerFullDropdown" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="BlueButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#20BEF2</item>
        <item name="colorButtonNormal">#20BEF2</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlHighlight">@color/light_green_highlight</item>
        <item name="colorButtonNormal">@color/light_green_highlight</item>
    </style>

    <style name="StoryTitle">
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">22sp</item>
        <item name="android:transitionName">@string/transition_story_title</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimary</item>
    </style>

</resources>
